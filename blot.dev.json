{
  "name": "dev",
  "host": "http://example.blot.apps.madhax.io",
  "base": ".",
  "docs": {
    "src": "src/docs",
    "dest": "dist/docs",
    "export": true
  },
  "fixtures": {
    "src": "src/fixtures",
    "dest": "dist/fixtures",
    "export": false
  },
  "view": {
    "dest": "dist/api.blot.html",
    "export": true,
    "options": {
      "themeFullWidth": true,
      "themeVariables": "slate"
    },
    "elements": {
      "container": "html",
      "scripts": false,
      "comments": false
    },
    "attrs": {},
    "replace": [
      {
        "desc": "replaces anchor hrefs with Angular-friendly value",
        "regex": ["href=\"#([^'\"]+)['\"]", "ng-click=\"scrollTo('|=$match|')\""]
      }
    ]
  },
  "logging": true,
  "pretty": false
}