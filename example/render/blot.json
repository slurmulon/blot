{
  "host": "http://example.blot.apps.madhax.io",
  "base": ".",
  "docs": {
    "src": "src/docs",
    "dest": "dist/docs",
    "root": "index.md",
    "export": true
  },
  "fixtures": {
    "src": "src/fixtures",
    "dest": "dist/fixtures",
    "export": false
  },
  "view": {
    "dest": "dist/api.blot.html",
    "export": true,
    "options": {
      "themeFullWidth": true,
      "themeVariables": "streak"
    },
    "elements": {
      "pluck": "body",
      "scripts": false,
      "comments": false
    },
    "attrs": {},
    "replace": [
      {
        "desc": "replaces positional anchor hrefs with Angular-friendly values",
        "match": "href=\"#([^'\"]+)['\"]", 
        "template": "ng-click=\"scrollTo('|=$match|')\""
      }
    ]
  },
  "logging": false,
  "pretty": false
}